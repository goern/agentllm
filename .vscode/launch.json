{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LiteLLM Proxy (Local Development)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/litellm",
            "args": [
                "--config",
                "proxy_config.yaml",
                "--port",
                "8890",
                "--detailed_debug"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
